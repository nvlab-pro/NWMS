                                "type": "integer"
                            },
                            "of_name": {
                                "description": "Product name",
                                "type": "string"
                            },
                            "of_article": {
                                "description": "Product article number",
                                "type": "string"
                            },
                            "of_sku": {
                                "description": "SKU code",
                                "type": "string"
                            },
                            "of_price": {
                                "description": "Base price of the product",
                                "type": "number",
                                "format": "float"
                            },
                            "of_img": {
                                "description": "URL of product image",
                                "type": "string"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
