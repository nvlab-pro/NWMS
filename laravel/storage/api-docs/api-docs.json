                    "oo_order_id",
                    "oo_offer_id",
                    "oo_qty",
                    "oo_price"
                ],
                "properties": {
                    "oo_id": {
                        "description": "Primary key",
                        "type": "integer"
                    },
                    "oo_order_id": {
                        "description": "Order ID",
                        "type": "integer"
                    },
                    "oo_offer_id": {
                        "description": "Offer ID",
                        "type": "integer"
                    },
                    "oo_qty": {
                        "description": "Quantity of the offer in the order",
                        "type": "number",
                        "format": "float"
                    },
                    "oo_oc_price": {
                        "description": "Original cost price of the offer",
                        "type": "number",
                        "format": "float"
                    },
                    "oo_price": {
                        "description": "Price at which the offer is sold",
                        "type": "number",
                        "format": "float"
                    },
                    "oo_expiration_date": {
                        "description": "Expiration date of the product, if applicable",
                        "type": "string",
                        "format": "date"
                    },
                    "oo_batch": {
                        "description": "Batch number of the product",
                        "type": "string",
                        "maxLength": 15
                    },
                    "oo_operation_user_id": {
                        "description": "User ID of the operator who handled this offer",
                        "type": "integer"
                    },
